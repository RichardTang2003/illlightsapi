    <body style="margin: 3rem 3rem 0 3rem;">
        <div class="words">
            <p><%= word1 %></p><p><%= word2 %></p><p><%= word3 %></p>
        </div>
        <br>
        <div class="add">
            <form action="/words/add" method="post">
                <label for="addword">添加新词：</label>
                <input name="addword" type="text"><br>
                <label for="addpasswd">更改密码：</label>
                <input name="addpasswd" type="password"><br>
                <button type="submit" class="btn">提交</button>
            </form>
        </div>
        <br>
        <div class="remove">
            <form action="/words/remove" method="post">
                <label for="removeword">删除旧词：</label>
                <input name="removeword" type="text"><br>
                <label for="removepasswd">更改密码：</label>
                <input name="removepasswd" type="password"><br>
                <button type="submit" calss="btn">提交</button>
            </form>
        </div>
    </body>
</html>

